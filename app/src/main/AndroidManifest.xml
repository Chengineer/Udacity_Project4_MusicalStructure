<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.p4musicalstructure">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/brazil_mapflag"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SambaDeGafieiraActivity"
            android:label="@string/samba_de_gafieira">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.p4musicalstructure.MainActivity" />
        </activity>
        <activity android:name=".ForroActivity"
            android:label="@string/forro">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.p4musicalstructure.MainActivity" />
        </activity>

        <activity android:name=".SertanejoActivity"
            android:label="@string/sertanejo">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.p4musicalstructure.MainActivity" />
        </activity>

        <activity android:name=".CapoeiraActivity"
            android:label="@string/capoeira">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.p4musicalstructure.MainActivity" />
        </activity>
        <activity android:name=".NowPlayingActivity"
            android:label="@string/now_playing"
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
    </application>

</manifest>